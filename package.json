{
  "name": "ethcore-demo",
  "version": "0.0.1",
  "description": "An example produced for curious interviewers",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.12",
    "express": "^4.13.3",
    "jquery": "^2.2.0",
    "node-gyp": "^3.3.0",
    "node-sass": "^3.4.2",
    "nunjucks": "^2.2.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-simple-pie-chart": "^0.3.1",
    "reset-css": "^2.0.2011012603",
    "uglifyify": "^3.0.1",
    "uglifyjs": "^2.4.10"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.min.js",
    "job-data": "./build/data/job-data.min.js"
  },
  "browserify-shim": {
    "jquery": "$"
  },
  "scripts": {
    "clean": "rm -rf build",
    "export-data": "mkdir build && mkdir build/data && uglifyjs src/jobs/job-data.js -o build/data/job-data.min.js",
    "sass": "node-sass --output-style compressed -o build/css/ scss/",
    "sass-watch": "node-sass --output-style compressed -w -o build/css/ scss/",
    "bundle": "browserify -t [ babelify --presets [ react ] ]  src/app.js > build/app.js",
    "bundle-min": "browserify -t [ babelify --presets [ react ] ] -g [ uglifyify ] src/app.js > build/app.js",
    "build": "npm run clean && npm run export-data && npm run sass && npm run bundle",
    "start": "node src/server.js",
    "browsersync": "browser-sync start --reload-delay 1000 --proxy 'http://localhost:3000' --files 'build/css/*.css, build/app.js, src/*/*.html, src/*/*/*.html'"
  },
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/isaachinman/ethcore-demo.git"
  },
  "dependencies": {}
}
